# BACKEND-SPECIFIC CONFIGURATION
# =================================================
# These variables are specific to the backend service.

# API Configuration
API_HOST="0.0.0.0"

# Database - The actual URL should be in the environment-specific file (.env.development or .env.production)
# DATABASE_URL=

# AI Configuration
MAX_FLASHCARDS_PER_GENERATION=10
DEFAULT_AI_MODEL="claude-3-sonnet"
# OpenAI/OpenRouter - Keys should be in the environment-specific file
# OPENAI_API_KEY=
# OPENAI_BASE_URL=
# OPENAI_MODEL=

# File Upload Configuration
PDF_STORAGE_PATH="data/storage/pdfs"
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_TYPES=".pdf"

# AWS Configuration
AWS_REGION="us-east-1"
PDF_URL_EXPIRY_HOURS=24

# Security
HSTS_MAX_AGE=31536000
# ALLOWED_HOSTS should be in the environment-specific file

# Application Constants
SUPPORTED_LANGUAGES="en,es,fr,de"
SESSION_TIMEOUT_MINUTES=60
APP_NAME="PDF Learning Platform"
