# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false

# SSL Configuration
SSL_CERT_PATH=./ssl/certificates/fullchain.pem
SSL_KEY_PATH=./ssl/certificates/privkey.pem
DOMAIN=yourdomain.com

# API Configuration
API_HOST=0.0.0.0
API_PORT=443

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/storage/database.db

# Storage Configuration
PDF_STORAGE_PATH=./data/storage/pdfs
MAX_FILE_SIZE=50485760

# AI Configuration
CLAUDE_API_KEY=your_claude_api_key_here
MAX_FLASHCARDS_PER_GENERATION=10

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Security Configuration
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000
SECURE_COOKIES=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_ACCESS_LOGS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60