# PDF Storage Configuration
# Choose storage provider: local, s3, gcs, azure, external_api, or hybrid
PDF_STORAGE_PROVIDER=local

# Local Storage Settings
PDF_STORAGE_PATH=./storage/pdfs

# AWS S3 Settings (when PDF_STORAGE_PROVIDER=s3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-pdf-bucket

# Google Cloud Storage Settings (when PDF_STORAGE_PROVIDER=gcs)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCS_BUCKET=your-gcs-bucket

# Azure Blob Storage Settings (when PDF_STORAGE_PROVIDER=azure)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINER=your-pdf-container
AZURE_ACCOUNT=your_storage_account

# External API Settings (when PDF_STORAGE_PROVIDER=external_api)
EXTERNAL_API_BASE=https://api.example.com
EXTERNAL_API_KEY=your_api_key

# General PDF Settings
PDF_URL_EXPIRY_HOURS=24
MAX_FILE_SIZE=10485760
MAX_FLASHCARDS_PER_GENERATION=10

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./storage/database.db

# AI Integration
CLAUDE_API_KEY=your_claude_api_key_here

# Application Settings
DEBUG=false
LOG_LEVEL=INFO