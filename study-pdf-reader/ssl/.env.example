# HTTPS Configuration for PDF Reader Application
# Copy this file to .env and update with your actual values

# Domain Configuration
DOMAIN=yourdomain.com
EMAIL=admin@yourdomain.com

# Let's Encrypt Configuration
STAGING=0  # Set to 1 for testing with staging certificates

# Application Configuration
CLAUDE_API_KEY=your_claude_api_key_here
ENVIRONMENT=production

# Database Configuration (if using external database)
# DATABASE_URL=postgresql+asyncio://user:password@host:port/database?sslmode=require

# Security Configuration
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Optional: Custom SSL certificate paths (if not using Let's Encrypt)
# SSL_CERT_PATH=/path/to/certificate.pem
# SSL_KEY_PATH=/path/to/private-key.pem

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Backup Configuration (optional)
# BACKUP_ENCRYPTION_KEY=your_backup_encryption_key
# BACKUP_S3_BUCKET=your-backup-bucket
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key