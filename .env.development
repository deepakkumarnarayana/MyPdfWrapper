# Development Environment - Overrides & Specific Settings
# ========================================================
# Only contains settings that are DIFFERENT in development environment

# Environment Identity
ENVIRONMENT="development"
DEBUG=true

# Development API
API_PORT=8000

# Development Logging
LOG_LEVEL="DEBUG"
ENABLE_ACCESS_LOGS=true

# Development Database (Local SQLite)
# DATABASE_URL=sqlite+aiosqlite:////absolute/path/to/dev/database.db

# Development Storage (Local filesystem)
# PDF_STORAGE_PATH=/absolute/path/to/dev/pdf/storage

# Development CORS (Permissive for local development)
ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://localhost:8080"

# Development Security (Relaxed)
ENABLE_HSTS=false
SECURE_COOKIES=false

# Development AI (Test API key)
CLAUDE_API_KEY="your_development_claude_api_key_here"

# No SSL in development
# SSL_CERT_PATH=""
# SSL_KEY_PATH=""
# DOMAIN=""