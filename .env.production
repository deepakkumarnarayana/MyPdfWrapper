# Production Environment - Secure & Optimized Settings
# ====================================================
# Only contains settings that are DIFFERENT in production environment

# Environment Identity
ENVIRONMENT="production"
DEBUG=false

# Production API (HTTPS)
API_PORT=443

# Production Logging (Minimal)
LOG_LEVEL="WARNING"
ENABLE_ACCESS_LOGS=false

# Production Database (PostgreSQL recommended)
# DATABASE_URL=postgresql+asyncpg://prod_user:secure_password@prod-db:5432/pdf_learning_platform

# Production Storage (Could be AWS S3 or secure filesystem)
# PDF_STORAGE_PATH=/var/app/production/storage/pdfs
# Or S3: AWS_S3_BUCKET=your-production-pdf-bucket

# Production CORS (Very restrictive)
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Production Security (Maximum)
ENABLE_HSTS=true
SECURE_COOKIES=true

# Production AI (Production API key with higher limits)
CLAUDE_API_KEY="your_production_claude_api_key_here"

# Production SSL (Required)
SSL_CERT_PATH="/etc/ssl/certs/cert.pem"
SSL_KEY_PATH="/etc/ssl/private/key.pem"
DOMAIN="yourdomain.com"