# Staging Environment - Production-like Settings
# ==============================================
# Only contains settings that are DIFFERENT in staging environment

# Environment Identity  
ENVIRONMENT="staging"
DEBUG=true  # Keep debug on for staging testing

# Staging API
API_PORT=8000

# Staging Logging (More verbose than production, less than dev)
LOG_LEVEL="INFO"
ENABLE_ACCESS_LOGS=true

# Staging Database (Could be PostgreSQL or separate SQLite)
# DATABASE_URL=postgresql+asyncpg://user:password@staging-db:5432/pdf_learning_staging
# Or: DATABASE_URL=sqlite+aiosqlite:////var/app/staging/database.db

# Staging Storage  
# PDF_STORAGE_PATH=/var/app/staging/storage/pdfs

# Staging CORS (Restrictive to staging domain)
ALLOWED_ORIGINS="https://staging.yourdomain.com,https://staging-api.yourdomain.com"

# Staging Security (Production-like)
ENABLE_HSTS=true
SECURE_COOKIES=true

# Staging AI (Staging API key)
CLAUDE_API_KEY="your_staging_claude_api_key_here"

# Staging SSL
# SSL_CERT_PATH="/etc/ssl/staging/cert.pem"
# SSL_KEY_PATH="/etc/ssl/staging/key.pem"
# DOMAIN="staging.yourdomain.com"